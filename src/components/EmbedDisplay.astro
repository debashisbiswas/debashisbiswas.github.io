---
import type { PerformanceData } from "../types"

interface Props {
  performance: PerformanceData
}

const { performance } = Astro.props
---

<a
  href={performance.hrefLink}
  target="_blank"
  class="flex justify-between items-center h-32 rounded-xl overflow-hidden border border-slate-300 transition ease-in-out hover:scale-[102%] hover:shadow-xl"
>
  <div class="p-4">
    <h3 class="text-xl font-bold mb-1 tracking-tight">{performance.name}</h3>
    <p class="text-lg text-gray-500 tracking-tighter">{performance.date}</p>
  </div>

  {
    performance.thumbnailLink && (
      // Negative margin allows the text to overlap with the image on small screens.
      // There's probably a better way to accomplish this...
      <img class="ml-[-60%] w-60 md:w-80 opacity-mask -z-10" src={performance.thumbnailLink} />
    )
  }
</a>

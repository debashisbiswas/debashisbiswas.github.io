---
import type { SoftwareData } from "../types"
import LinkButton from "./LinkButton.astro"

interface Props {
  project: SoftwareData
}

const { project } = Astro.props
---

<div class="bg-slate-800 p-4">
  <div class="tracking-tight">
    <h4 class="mb-1 text-xl font-bold">
      {project.name}
    </h4>
    <h5 class="text-md mb-2 text-slate-400">{project.lang}</h5>
  </div>
  <div class="mb-4">{project.desc}</div>

  <div class="flex justify-start space-x-2">
    {project.link && <LinkButton href={project.link}>Link</LinkButton>}
    {project.sourceCode && <LinkButton href={project.sourceCode}>Code</LinkButton>}
  </div>
</div>
